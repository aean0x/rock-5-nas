# SOPS Secrets Template
# 1. Copy to secrets.yaml.work
# 2. Fill in your values
# 3. Run ./encrypt

user:
    # Generate with: mkpasswd -m SHA-512
    hashedPassword: "$6$..."
    # Your SSH public key (cat ~/.ssh/id_ed25519.pub)
    pubKey: "ssh-ed25519 AAAA..."

vpn:
    # WireGuard config from VPN provider (Mullvad, AirVPN, etc.)
    wgConf: |
        [Interface]
        PrivateKey = ...
        Address = ...
        [Peer]
        PublicKey = ...
        Endpoint = ...
        AllowedIPs = 0.0.0.0/0

services:
    transmission:
        credentials: '{"rpc-password": "your_password"}'
    caddy:
        cloudflareToken: "CLOUDFLARE_API_TOKEN=your_token_here"
